{
  "name": "Floatplane.com Chat Moderator",
  "description": "Moderation for an unmoderated platform",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.floatplane.com/*"
      ],
      "js": [
        "content-scripts/hide-blocked.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}